#! /bin/bash

ETH='eno1';                          # Default inet
DHC='dhcpcd';                        # DHCP client
DHC_LEASE='/var/lib/dhcpcd/dhcpcd-'; # DHCP client lease
function reload {
    killall ${DHC};
    ip addr flush dev ${ETH};
    sleep 2;
    rm ${DHC_LEASE}*;
    macchanger -e ${ETH};
    ${DHC} ${ETH};
}

function usage {
    echo "Usage: -r [inet] (reload ip/mac any 2 hours)";
    echo "       -k [inet] (kill every task, reset to default)";
    echo "       -i [inet] (interface, no reset hw mac addr)";
    echo "       -f (force)."
}


(ip link show "$2" > /dev/null 2>&1) && ETH="$2";

while : ; do
    case "$1" in
        "-k")
            killall ${DHC}; rm ${DHC_LEASE}*; macchanger -p ${ETH}; 
            sleep 2; ${DHC} ${ETH};
            fw ${ETH};
            ;;
        "-f")
            echo "" > /etc/resolv.conf; ip link set ${ETH} down;
            ;;
        "-r")
            while true; do reload; fw ${ETH}; sleep 7200; done;
            ;;
        "-i")
            killall ${DHC}; rm ${DHC_LEASE}*; sleep 2; ${DHC} ${ETH}; fw ${ETH}; 
            ;;
        *)
            usage;
            exit 1;
            ;;
    esac;
    shift;
    [[ "$1" != "" ]] || break;
done;
